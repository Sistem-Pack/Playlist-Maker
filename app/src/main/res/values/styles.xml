<?xml version="1.0" encoding="utf-8"?>
<resources>
    -- style for button on the Main Screen activity_main.xml
    <style name="ButtonMainScreenStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dm16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ln22</item>
        <item name="cornerRadius">@dimen/dm16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dm8</item>
        <item name="iconTint">@color/black</item>
    </style>

    -- style for head LinearLayout of the xml screen files
    -- HEAD
    <style name="StartScreenStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>
    -- BODY
    <style name="BodyStartScreenStyle" parent="StartScreenStyle">
        <item name="android:background">@color/white</item>
    </style>

    -- style for FrameLayout in activity_settings.xml
    <style name="SettingsListFrameForSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/dm12</item>
        <item name="android:paddingStart">@dimen/dm16</item>
        <item name="android:paddingEnd">@dimen/dm12</item>
    </style>

    <style name="SettingsListFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/dm21</item>
        <item name="android:paddingStart">@dimen/dm16</item>
        <item name="android:paddingEnd">@dimen/dm12</item>
    </style>

    -- style for TextView in activity_settings.xml
    <style name="SettingsTextViewList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ln16</item>
    </style>

    -- style for ImageView in activity_settings.xml
    <style name="SettingsImageViewList">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:contentDescription">@string/null_string</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/gray</item>
    </style>

    -- style for ImageView in activity_settings.xml
    <style name="BackButtonImageView" parent="SettingsImageViewList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/null_string</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/black</item>
    </style>

    -- style for Switch in activity_settings.xml Dark/Light Mode
    <style name="ModeSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/switch_mode_string</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ln16</item>
        <item name="android:layout_gravity">center</item>
    </style>

    -- style for EditText in search_settings.xml Dark/Light Mode
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dm36</item>
        <item name="android:layout_marginHorizontal">@dimen/dm16</item>
        <item name="android:textCursorDrawable">@color/background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:background">@drawable/rounded_corners_edit</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:hint">@string/search_title</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawablePadding">@dimen/dm4</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ln16</item>
        <item name="android:paddingEnd">@dimen/dm8</item>
        <item name="endIconMode">clear_text</item>
    </style>

    -- clear text button ImageButton in search_activity.xml
    <style name="ClearTextImageButtonStyle">
        <item name="android:layout_width">@dimen/dm36</item>
        <item name="android:layout_height">@dimen/dm36</item>
        <item name="android:src">@drawable/clear_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/dm16</item>
        <item name="android:tint">@color/gray</item>
    </style>

    -- styles for track
    <style name="trackStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="trackArtistStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="track_arrow_ic">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="tint">@color/gray</item>
        <item name="iconGravity">textStart</item>
    </style>

    -- parent for ImageView
    <style name="trackSearchResultsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="notFoundStyle" parent="trackSearchResultsImage">
        <item name="android:src">@drawable/l_m_not_found_error</item>
    </style>

    <style name="noConnectionStyle" parent="trackSearchResultsImage">
        <item name="android:src">@drawable/l_m_no_connection_error</item>
    </style>

    <style name="searchStatusFoundOrErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dm102</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dm16</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/ln19</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="refreshButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/button_text_search</item>
        <item name="android:textSize">@dimen/ln14</item>
    </style>

    <style name="cleanHistoryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dm24</item>
        <item name="android:layout_marginBottom">@dimen/dm4</item>
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/clean_history</item>
        <item name="android:textSize">@dimen/ln14</item>
        <item name="cornerRadius">@dimen/dm54</item>
    </style>

    <style name="historySearchTextStyly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dm16</item>
        <item name="android:paddingTop">@dimen/dm16</item>
        <item name="android:paddingBottom">@dimen/dm12</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/dm16</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/ln19</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/you_are_search</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>