<?xml version="1.0" encoding="utf-8"?>
<resources>
    -- style for button on the Main Screen activity_main.xml
    <style name="ButtonMainScreenStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dm16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ln22</item>
        <item name="cornerRadius">@dimen/dm16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dm8</item>
        <item name="iconTint">@color/black</item>
    </style>

    -- style for head LinearLayout of the xml screen files
    -- HEAD
    <style name="StartScreenStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>
    -- BODY
    <style name="BodyStartScreenStyle" parent="StartScreenStyle">
    </style>

    -- style for FrameLayout in activity_settings.xml
    <style name="SettingsListFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/dm21</item>
        <item name="android:paddingStart">@dimen/dm16</item>
        <item name="android:paddingEnd">@dimen/dm12</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    -- style for TextView in activity_settings.xml
    <style name="SettingsTextViewList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ln16</item>
    </style>

    -- style for ImageView in activity_settings.xml
    <style name="SettingsImageViewList">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:contentDescription">@string/null_string</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/white</item>
    </style>

    -- style for ImageView in activity_settings.xml
    <style name="BackButtonImageView" parent="SettingsImageViewList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/null_string</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/white</item>
    </style>

    -- style for Switch in activity_settings.xml Dark/Light Mode
    <style name="ModeSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumbTint">@color/background</item>
        <item name="android:trackTint">@color/light_blue</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    -- style for EditText in search_settings.xml Dark/Light Mode
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dm16</item>
        <item name="android:textCursorDrawable">@color/background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:background">@drawable/rounded_corners_edit</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:hint">@string/search_title</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawablePadding">@dimen/dm4</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ln16</item>
        <item name="android:paddingEnd">@dimen/dm8</item>
        <item name="endIconMode">clear_text</item>
    </style>

    -- clear text button ImageButton in search_activity.xml
    <style name="ClearTextImageButtonStyle">
        <item name="android:layout_width">@dimen/dm36</item>
        <item name="android:layout_height">@dimen/dm36</item>
        <item name="android:src">@drawable/clear_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/dm16</item>
        <item name="android:tint">@color/black</item>
    </style>

</resources>