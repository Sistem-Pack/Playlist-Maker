<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    android:orientation="horizontal"
    android:theme="@style/Theme.PlaylistMaker">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm8"
        app:cardCornerRadius="@dimen/dm2"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_cover_playlist"
            android:layout_width="@dimen/dm45"
            android:layout_height="@dimen/dm45"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/track_pic_312" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="44dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="@color/dark_item"
            android:textSize="@dimen/ln16"
            tools:text="@string/playlist_name" />

        <TextView
            android:id="@+id/tv_playlist_tracks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:text="@string/playlist_count"
            android:textColor="@color/gray"
            android:textSize="@dimen/ln11"
             />

    </LinearLayout>

</LinearLayout>