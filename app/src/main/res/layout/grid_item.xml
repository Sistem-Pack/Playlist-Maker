<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="@dimen/dm8"
    android:orientation="vertical"
    android:padding="@dimen/dm8"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dm8"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_cover_playlist"
            android:background="@color/white"
            android:layout_width="@dimen/dm160"
            android:layout_height="@dimen/dm160"
            android:scaleType="centerCrop"
            android:src="@drawable/track_pic_312" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm4"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/ln12"
        tools:text="@string/playlist_name" />

    <TextView
        android:id="@+id/tv_playlist_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:text="@string/playlist_count"
        android:textColor="@color/dark_item"
        android:textSize="@dimen/ln12" />
</androidx.appcompat.widget.LinearLayoutCompat>